{{#if recipes}}
<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-3 col-sm-offset-3">
    <ul class="list-group">
      {{#each recipes as |recipe|}}
      <li class="list-group-item"></li>
      <strong>{{ item.recipe_name }}</strong>
        <span>price: ${{item.unit_price}}</span>
        <div class="float-right">
            <h5>
                <a href="/reduce/{{ this.item.id }}"><i class="fas fa-minus-square"></i></a>
                <i>{{item.quantity}}</i>
                <a href="/addByOne/{{ this.item.id }}"><i class="fas fa-plus-square"></i></a>
            </h5>                            
        </div>
        
      </li>
      {{/each}}
      
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <strong>Total: ${{totalPrice}}</strong>
  </div>
</div>
<hr />
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <a href="/checkout" class="btn btn-success" type="button">Checkout</a>
  </div>
</div>
{{else}}
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <h2>No Item in Cart</h2>
  </div>
</div>
{{/if}}