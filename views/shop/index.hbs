{{#each recipes as |recipe|}}
  <div class="row">
    {{#each this}}
      <div class="col-sm-6 col-sm-4">
        <div class="thumbnail">
          <img class="imag-responsive" src="{{this.imagePath}}" alt="..." />
          <div class="caption">
            <h3>{{this.recipe_name}}</h3>
            <p class="description">{{this.recipe_description"}}</p>
            <div class="clearfix">
              <div class="price pull-lest">${{this.unit_price}}</div>
              <a
                href="#"
                class="btn btn-success pull-right"
                role="button"
              >Add to cart</a></div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/each}}

